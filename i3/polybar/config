[module/playpause]
type = custom/ipc
format-font = 2
; Default
hook-0 = echo ""
; Playing
hook-1 = echo "ïŒ"
; Paused
hook-2 = echo "ï‹"
click-left = "spotifyctl -q playpause"


[module/spotify]
type = custom/ipc
; Default
hook-0 = echo ""
; Playing/paused show song name and artist
hook-1 = spotifyctl -q status --format 'ï†¼ %artist%: %title%' --max-length 60
click-left = "spotifyctl -q playpause"
click-right = i3-msg '[class="Spotify"] focus'

